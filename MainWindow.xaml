<Window x:Class="Timer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:local="clr-namespace:Timer"
        mc:Ignorable="d" 
        d:DataContext="{d:DesignInstance Type=local:MainViewModel}"
        Title="Timer" Height="450" Width="400" 
        WindowStartupLocation="CenterScreen" ShowInTaskbar="True"
        Closing="Window_Closing">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/SkinDefault.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid x:Name="TimerGrid" Background="#ffffff">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Border Grid.Row="0" Background="#4CAF50" Padding="20,15">
            <TextBlock Text="专注计时器" 
                       Foreground="White" 
                       FontSize="24" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- 主要内容 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- 状态显示 -->
                <Border Style="{StaticResource InfoCard}">
                    <StackPanel>
                        <TextBlock Text="当前状态" 
                                   Foreground="#666" 
                                   FontSize="12"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding Model.CurrentState}" 
                                   Foreground="#333" 
                                   FontSize="18"
                                   FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 时间显示 -->
                <Border Style="{StaticResource InfoCard}">
                    <StackPanel>
                        <TextBlock Text="剩余时间" 
                                   Foreground="#666" 
                                   FontSize="12"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding Model.RemainingTimeDisplay}" 
                                   Foreground="#4CAF50" 
                                   FontSize="36"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- 今日使用统计 -->
                <Border Style="{StaticResource InfoCard}">
                    <StackPanel>
                        <TextBlock Text="今日使用时长" 
                                   Foreground="#666" 
                                   FontSize="12"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding Model.TodayUsageDisplay}" 
                                   Foreground="#2196F3" 
                                   FontSize="20"
                                   FontWeight="Bold"/>
                        <Button Content="重置统计" 
                                Command="{Binding ResetTodayCommand}"
                                Style="{StaticResource ModernButton}"
                                Background="#2196F3"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

                <!-- 设置 -->
                <Border Style="{StaticResource InfoCard}">
                    <StackPanel>
                        <TextBlock Text="时间设置" 
                                   Foreground="#666" 
                                   FontSize="12"
                                   Margin="0,0,0,10"/>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="工作时间:" 
                                       Width="100" 
                                       VerticalAlignment="Center"/>
                            <TextBox Text="{Binding Model.Settings.WorkTime, UpdateSourceTrigger=PropertyChanged}"
                                     Width="60"
                                     TextAlignment="Center"/>
                            <TextBlock Text="分钟" 
                                       Margin="5,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="休息时间:" 
                                       Width="100" 
                                       VerticalAlignment="Center"/>
                            <TextBox Text="{Binding Model.Settings.BreakTime, UpdateSourceTrigger=PropertyChanged}"
                                     Width="60"
                                     TextAlignment="Center"/>
                            <TextBlock Text="分钟" 
                                       Margin="5,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="提前提醒:" 
                                       Width="100" 
                                       VerticalAlignment="Center"/>
                            <TextBox Text="{Binding Model.Settings.NotificationThreshold, UpdateSourceTrigger=PropertyChanged}"
                                     Width="60"
                                     TextAlignment="Center"/>
                            <TextBlock Text="分钟" 
                                       Margin="5,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Border>


                <!-- 系统托盘图标（HandyControl） -->
                <hc:NotifyIcon x:Name="TrayIcon"
                   Token="{x:Static local:AppIcons.NotifyIcon}"
                    Text="我的应用"
                    Visibility="Visible"
                               MouseDoubleClick="TrayIcon_MouseDoubleClick"
                    >
                    <!-- 双击事件 -->

                    <!-- 右键菜单 -->
                    <hc:NotifyIcon.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="打开面板" Click="OpenButtonClicked"/>
                            <MenuItem Header="打开弹窗" Click="NotifyClick"/>
                            <MenuItem Header="开始" Command="{Binding StartWorkCommand}"/>
                            <MenuItem Header="停止" Command="{Binding StopCommand}"/>
                            <Separator/>
                            <MenuItem Header="退出程序" Click="CloseButtonClicked"/>
                        </ContextMenu>
                    </hc:NotifyIcon.ContextMenu>
                </hc:NotifyIcon>
            </StackPanel>
        </ScrollViewer>

        <!-- 操作按钮 -->
        <Border Grid.Row="2" Background="#f8f9fa" BorderThickness="0,1,0,0" BorderBrush="#e9ecef">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="开始工作" 
                        Command="{Binding StartWorkCommand}"
                        Style="{StaticResource ModernButton}"/>

                <Button Content="开始休息" 
                        Command="{Binding StartBreakCommand}"
                        Style="{StaticResource ModernButton}"
                        Background="#2196F3"/>

                <Button Content="停止" 
                        Command="{Binding StopCommand}"
                        Style="{StaticResource StopButton}"/>
            </StackPanel>
        </Border>
        
        
    </Grid>
</Window>
