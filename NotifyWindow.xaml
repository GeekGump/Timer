<UserControl x:Class="Timer.NotifyWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Timer"
             mc:Ignorable="d" Background="Azure"
             d:DesignHeight="300" d:DesignWidth="300" d:DataContext="{d:DesignInstance Type=local:NotifyViewModel}">
    <UserControl.Resources>
        <DropShadowEffect x:Key="ShadowEffect" BlurRadius="20" ShadowDepth="0" Color="#40000000"/>
    </UserControl.Resources>

    <Border Background="Transparent"
            Margin="15">
    <Border Background="White" 
            CornerRadius="15" 
            Margin="0"
            Effect="{StaticResource ShadowEffect}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Border Grid.Row="0" 
                    Background="#4CAF50" 
                    CornerRadius="15,15,0,0"
                    Padding="15,10">
                <TextBlock Text="时间提醒" 
                           Foreground="White" 
                           FontSize="16"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>
            </Border>

            <!-- 消息内容 -->
            <TextBlock Grid.Row="1" 
                       Text="{Binding Message}"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="#333"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       TextAlignment="Center"
                       Margin="20"/>

            <!-- 倒计时显示 -->
            <TextBlock Grid.Row="2" 
                       Text="{Binding RemainingTime}"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="{Binding _model.TextColor}"
                       HorizontalAlignment="Center"
                       Margin="20,10"/>

            <!-- 进度条 -->
            <Border Grid.Row="3" 
                    Background="#f0f0f0" 
                    Height="12" 
                    CornerRadius="6"
                    Margin="20,10">
                <Border Background="{Binding ProgressColor}" 
                        HorizontalAlignment="Left"
                        Width="{Binding Progress, Converter={x:Static local:PercentageConverter.Instance}}"
                        CornerRadius="6"/>
            </Border>

            <!-- 关闭按钮 -->
            <Button Grid.Row="4" 
                    Content="关闭" 
                    Command="{Binding CloseCommand}"
                    Background="#f44336"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="20,8"
                    Margin="20,15"
                    FontWeight="SemiBold"
                    Cursor="Hand"
                    HorizontalAlignment="Center">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Border>
    </Border>
</UserControl>
